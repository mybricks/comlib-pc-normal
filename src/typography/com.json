{
  "title": "文本排版",
  "namespace": "mybricks.normal-pc.typography",
  "version": "1.0.18",
  "description": "展示文本基本格式",
  "author": "MyBricks",
  "author_name": "MyBricks",
  "icon": "./icon.svg",
  "data": "./data.json",
  "runtime": "./runtime.tsx",
  "editors": "./editors.tsx",
  "upgrade": "./upgrade.ts",
  "inputs": [
    {
      "id": "setData",
      "title": "设置数据",
      "desc": "设置文本排版数据，并触发设置数据完成输出",
      "schema": {
        "type": "array",
        "description": "文本排版动态列表数据",
        "items": {
          "type": "object",
          "properties": {
            "content": {
              "title": "内容",
              "type": "string"
            },
            "type": {
              "title": "类型",
              "type": "string",
              "description": "可以为文本 'Text'、标签 'Tag'、链接'Link'"
            },
            "link": {
              "title": "链接",
              "type": "string"
            },
            "style": {
              "type": "object",
              "desc": "单个子项元素的样式",
              "properties": {
                "color": {
                  "type": "string"
                },
                "fontSize": {
                  "type": "string"
                },
                "fontWeight": {
                  "type": "number"
                },
                "stylePadding": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      },
      "rels": [
        "setDataDone"
      ]
    }
  ],
  "outputs": [
    {
      "id": "click",
      "title": "单击",
      "desc": "点击某一文本排版内容后，事件输出",
      "schema": {
        "type": "object",
        "description": "单击后，获取的当前点击的文版排版的索引和数据",
        "properties": {
          "values": {
            "type": "object",
            "description": "当前点击项的数据内容",
            "properties": {
              "content": {
                "title": "内容",
                "type": "string"
              },
              "key": {
                "title": "唯一标识",
                "type": "string"
              },
              "type": {
                "title": "类型",
                "type": "string"
              },
              "link": {
                "title": "链接",
                "type": "string"
              }
            }
          },
          "index": {
            "description": "当前点击项的索引",
            "type": "number"
          }
        }
      }
    },
    {
      "id": "setDataDone",
      "title": "设置数据完成",
      "desc": "设置文本排版数据完成后，事件输出",
      "schema": {
        "type": "array",
        "desc": "数组结构的文本排版数据格式",
        "items": {
          "type": "object",
          "properties": {
            "content": {
              "title": "内容",
              "type": "string"
            },
            "type": {
              "title": "类型",
              "type": "string",
              "description": "可以为文本 'Text'、标签 'Tag'、链接'Link'"
            },
            "link": {
              "title": "链接",
              "type": "string",
              "desc": "跳转链接"
            },
            "style": {
              "type": "object",
              "description": "单个子项元素的样式",
              "properties": {
                "color": {
                  "type": "string"
                },
                "fontSize": {
                  "type": "string"
                },
                "fontWeight": {
                  "type": "number"
                },
                "stylePadding": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}