{
  "title": "Excel导出",
  "namespace": "mybricks.normal-pc.excel",
  "version": "1.0.8",
  "rtType": "js",
  "description": "数据导出excel",
  "author": "tangxiaoxin",
  "author_name": "唐小新",
  "data": "./data.json",
  "runtime": "./runtime.ts",
  "editors": "./editor.ts",
  "icon": "./icon.svg",
  "upgrade": "./upgrade.ts",
  "inputs": [
    {
      "id": "input",
      "title": "输入项",
      "desc": "需要导出的表数据",
      "schema": [
        {
          "name": "dataSource",
          "title": "输入数据源",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "表名称"
              },
              "header": {
                "type": "array",
                "description": "表头",
                "items": {
                  "type": "string"
                }
              },
              "additionalInfo": {
                "type": "object",
                "description": "补充的描述性信息，可以指定内容加在第几行",
                "properties": {
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "rowIndex": {
                    "type": "number",
                    "description": "所在的行索引,从1开始(不超过excel内容行数),若设为1,将设置在标题行,header的内容会下移一行"
                  }
                }
              },
              "columns": {
                "type": "array",
                "description": "列配置",
                "items": {
                  "type": "object",
                  "properties": {
                    "width": {
                      "type": "number",
                      "description": "列宽"
                    },
                    "hidden": {
                      "type": "boolean",
                      "description": "列是否隐藏"
                    }
                  }
                }
              },
              "data": {
                "type": "array",
                "description": "表数据",
                "items": {
                  "type": "object"
                }
              }
            }
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "id": "exportComplete",
      "title": "完成",
      "desc": "生成Excel完成后, 输出",
      "schema": {
        "type": "any"
      }
    }
  ]
}
