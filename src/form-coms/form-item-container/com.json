{
  "title": "自定义表单项",
  "namespace": "mybricks.normal-pc.form-item-container",
  "author": "ZhuLin",
  "author_name": "朱琳",
  "version": "1.1.11",
  "description": "自定义表单项的容器，支持拖入其他任意组件搭建组合表单项",
  "icon": "./icon.svg",
  "preview": "https://f2.eckwai.com/kos/nlav11092/u_w362ze.31720498c703e91b.png",
  "data": "./data.json",
  "runtime": "./runtime.tsx",
  "editors": "./editors.tsx",
  "upgrade": "./upgrade.ts",
  "inputs": [
    {
      "id": "setValue",
      "title": "设置值",
      "desc": "设置表单项的值，用于校验和提交，并触发值变化事件输出",
      "schema": {
        "type": "any"
      },
      "rels": [
        "setValueDone"
      ]
    },
    {
      "id": "setInitialValue",
      "title": "设置初始值",
      "desc": "设置表单项的初始值，用于校验和提交，并触发初始化事件输出",
      "schema": {
        "type": "any"
      },
      "rels": [
        "setInitialValueDone"
      ]
    },
    {
      "id": "validate",
      "title": "校验",
      "desc": "触发表单项的校验检查，并输出校验结果",
      "schema": {
        "type": "any"
      },
      "rels": [
        "returnValidate"
      ]
    },
    {
      "id": "getValue",
      "title": "获取值",
      "desc": "获取表单项的值并输出",
      "schema": {
        "type": "any"
      },
      "rels": [
        "returnValue"
      ]
    },
    {
      "id": "resetValue",
      "title": "重置值",
      "desc": "清空表单项的值",
      "schema": {
        "type": "any"
      },
      "rels": [
        "resetValueDone"
      ]
    },
    {
      "id": "setDisabled",
      "title": "设置禁用",
      "desc": "禁用自定义表单项，阻止用户交互",
      "schema": {
        "type": "any"
      },
      "rels": [
        "setDisabledDone"
      ]
    },
    {
      "id": "setEnabled",
      "title": "设置启用",
      "desc": "启用自定义表单项，允许用户交互",
      "schema": {
        "type": "any"
      },
      "rels": [
        "setEnabledDone"
      ]
    },
    {
      "id": "isEnable",
      "title": "启用/禁用",
      "desc": "根据输入值控制自定义表单项启用/禁用，true-启用，false-禁用",
      "schema": {
        "type": "boolean"
      },
      "rels": [
        "isEnableDone"
      ]
    },
    {
      "id": "setValidateInfo",
      "title": "设置校验状态",
      "desc": "设置表单项的校验状态和校验失败提示文案",
      "schema": {
        "type": "object",
        "properties": {
          "validateStatus": {
            "type": "enum",
            "description": "校验状态",
            "items": [
              {
                "type": "string",
                "value": "success"
              },
              {
                "type": "string",
                "value": "error"
              }
            ]
          },
          "help": {
            "type": "string",
            "description": "校验提示"
          }
        }
      },
      "rels": [
        "setValidateInfoDone"
      ]
    },
    {
      "id": "setOptions",
      "title": "设置数据源输入",
      "schema": {
        "type": "any"
      },
      "rels": [
        "setOptionsDone"
      ]
    }
  ],
  "outputs": [
    {
      "id": "onInitial",
      "title": "值初始化",
      "desc": "自定义表单项值初始化时触发，输出自定义表单项初始值",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "onChange",
      "title": "值更新",
      "desc": "自定义表单项值更新时触发，输出自定义表单项当前值",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "onValidate",
      "title": "校验触发",
      "desc": "自定义表单项校验时触发，输出自定义表单项当前值",
      "schema": {
        "title": "当前值",
        "type": "any"
      }
    },
    {
      "id": "returnValidate",
      "title": "校验结果",
      "desc": "输出自定义表单项校验结果",
      "schema": {
        "type": "object",
        "properties": {
          "validateStatus": {
            "title": "校验状态",
            "type": "string",
            "description": "校验状态"
          },
          "help": {
            "title": "校验提示",
            "type": "string",
            "description": "校验提示"
          }
        }
      }
    },
    {
      "id": "returnValue",
      "title": "值输出",
      "desc": "输出自定义表单项当前值",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "setValueDone",
      "title": "设置值完成",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "setInitialValueDone",
      "title": "设置初始值完成",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "resetValueDone",
      "title": "重置完成",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "setDisabledDone",
      "title": "禁用完成",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "setEnabledDone",
      "title": "启用完成",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "isEnableDone",
      "title": "启用/禁用完成",
      "schema": {
        "type": "boolean"
      }
    },
    {
      "id": "setValidateInfoDone",
      "title": "设置校验状态完成",
      "schema": {
        "type": "object",
        "properties": {
          "validateStatus": {
            "type": "enum",
            "description": "校验状态",
            "items": [
              {
                "type": "string",
                "value": "success"
              },
              {
                "type": "string",
                "value": "error"
              }
            ]
          },
          "help": {
            "type": "string",
            "description": "校验提示"
          }
        }
      }
    },
    {
      "id": "setOptionsDone",
      "title": "设置数据源输入完成",
      "schema": {
        "type": "any"
      }
    }
  ],
  "slots": [
    {
      "id": "formItem",
      "title": "自定义表单项",
      "type": "scope",
      "inputs": [
        {
          "id": "curValue",
          "title": "初始值输入",
          "schema": {
            "type": "any"
          }
        },
        {
          "id": "fieldSource",
          "title": "数据源选项输入",
          "schema": {
            "type": "any"
          }
        },
        {
          "id": "onEnabled",
          "title": "启用时",
          "schema": {
            "type": "any"
          }
        },
        {
          "id": "onDisabled",
          "title": "禁用时",
          "schema": {
            "type": "any"
          }
        }
      ],
      "outputs": [
        {
          "id": "setCurValue",
          "title": "设置表单项值",
          "schema": {
            "type": "any"
          }
        }
      ]
    }
  ],
  "schema": [
    "mybricks.normal-pc.form-container/form-item",
    "*"
  ]
}