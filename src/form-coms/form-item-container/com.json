{
  "title": "自定义表单项",
  "namespace": "mybricks.normal-pc.form-item-container",
  "author": "ZhuLin",
  "author_name": "朱琳",
  "version": "1.0.6",
  "description": "自定义表单项的容器，支持拖入其他任意组件搭建组合表单项",
  "icon": "./icon.svg",
  "data": "./data.json",
  "runtime": "./runtime.tsx",
  "editors": "./editors.tsx",
  "upgrade": "./upgrade.ts",
  "inputs": [
    {
      "id": "setValue",
      "title": "设置值",
      "desc": "设置表单项的值，用于校验和提交，并触发值变化事件输出",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "setInitialValue",
      "title": "设置初始值",
      "desc": "设置表单项的初始值，用于校验和提交，并触发初始化事件输出",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "validate",
      "title": "校验",
      "desc": "触发表单项的校验检查，并输出校验结果",
      "schema": {
        "type": "any"
      },
      "rels": [
        "returnValidate"
      ]
    },
    {
      "id": "getValue",
      "title": "获取值",
      "desc": "获取表单项的值并输出",
      "schema": {
        "type": "any"
      },
      "rels": [
        "returnValue"
      ]
    },
    {
      "id": "resetValue",
      "title": "重置值",
      "desc": "清空表单项的值",
      "schema": {
        "type": "any"
      }
    }
  ],
  "outputs": [
    {
      "id": "onInitial",
      "title": "初始化",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "onChange",
      "title": "值更新",
      "schema": {
        "type": "any"
      }
    },
    {
      "id": "returnValidate",
      "title": "校验结果",
      "schema": {
        "type": "object",
        "properties": {
          "validateStatus": {
            "title": "校验状态",
            "type": "string"
          },
          "help": {
            "title": "校验提示",
            "type": "string"
          }
        }
      }
    },
    {
      "id": "returnValue",
      "title": "值输出",
      "schema": {
        "type": "any"
      }
    }
  ],
  "slots": [
    {
      "id": "formItem",
      "title": "自定义表单项",
      "type": "scope",
      "inputs": [
        {
          "id": "curValue",
          "title": "当前项数据",
          "schema": {
            "type": "any"
          }
        }
      ]
    }
  ],
  "schema": [
    "mybricks.normal-pc.form-container/form-item",
    "*"
  ]
}